<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cửa Hàng Thời Trang</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/websiteshopping.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Matangi:wght@300..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="d-flex justify-content-center align-items-center" style="height: 80px;">
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="https://websitedemos.net/clothing-store-04/wp-content/uploads/sites/1538/2025/05/header-logo.svg" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index">Blog</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Career" asp-action="Index">Careers</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="FAQ" asp-action="Index">FAQ's'</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        hello
                    </div>
                </div>
            </nav>
        </div>
    </header>
    
    <nav class="bg-black">
        <div class="container" style="height:50px;">
            <h4 class="text-white text-center fw-medium fs-16 pt-3">Get 15% off on your first order</h4>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="text-white pt-5" style="background-color: #000;">
        <div class="container">
            <div class="row gy-4">
                <div class="col-12 col-md-3">
                    <h5 class="fw-bold fs-24">
                        <img style="height: 50px;" src="https://websitedemos.net/clothing-store-04/wp-content/uploads/sites/1538/2025/05/header-logo.svg" />
                    </h5>
                    <p class="mt-2 fs-18">Classic looks for Men,<br>Women & Kids.</p>
                    <div class="d-flex gap-3 mt-3">
                        <i class="bi bi-instagram"></i>
                        <i class="bi bi-facebook"></i>
                        <i class="bi bi-linkedin"></i>
                        <i class="bi bi-x"></i>
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold fs-18">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none fs-18">Home</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Shop</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">About</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Contact</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold fs-18">Shop</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none fs-18">Mens Wear</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Womens Wear</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Kids Wear</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Accessories</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-bold fs-18">Help</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none fs-18">FAQ’s</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Return Policy</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Order Status</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Shipping & Delivery</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-3">
                    <h6 class="fw-bold fs-18">My Profile</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none fs-18">My Account</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Track Order</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">My Cart</a></li>
                        <li><a href="#" class="text-white text-decoration-none fs-18">Order History</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center pb-4">
                <p class="mb-2 mb-md-0 small fs-16">Copyright © 2025 Clothing Store All rights reserved</p>
                <div class="d-flex gap-2">
                    <img width="272" height="48" src="https://websitedemos.net/clothing-store-04/wp-content/uploads/sites/1538/2025/05/payments.svg" class="attachment-full size-full wp-image-88" alt="">
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
