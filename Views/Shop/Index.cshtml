<section class="py-5" style="background-color: #e6f3fd;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
                <p class="fs-5 text-muted mb-2">Protect your eyes</p>
                <h2 class="fw-bold display-5">Get 25% OFF</h2>
                <p class="text-danger fs-6">Code: <span class="fw-bold">25MARKET</span></p>
                <a href="#" class="btn btn-dark px-4 py-2 text-uppercase fw-semibold">View Collections</a>
            </div>
            <div class="col-md-6 text-center">
                <img src="https://cdn.pixabay.com/photo/2017/03/27/14/56/women-2178588_1280.jpg" class="img-fluid" alt="Discount Banner" />
            </div>
        </div>
    </div>
</section>

<section class="home-arrival py-5">
    <div class="container">
        <!-- SEARCH, CATEGORY & SORT -->
        <form class="mb-4" method="get" action="/Product/Search">
            <div class="row g-2 align-items-center">
                <!-- Search input -->
                <div class="col-md-7">
                    <input type="text" name="query" class="form-control px-3 py-2" placeholder="Find your product" />
                </div>

                <!-- Category -->
                <div class="col-md-2">
                    <select class="form-select py-2" name="category">
                        <option value="">All Categories</option>
                        <option value="men">Men</option>
                        <option value="women">Women</option>
                        <option value="kids">Kids</option>
                        <option value="accessories">Accessories</option>
                    </select>
                </div>

                <!-- Sort -->
                <div class="col-md-2">
                    <select class="form-select py-2" name="sort">
                        <option value="">Sort by Price</option>
                        <option value="asc">Low to High</option>
                        <option value="desc">High to Low</option>
                    </select>
                </div>

                <!-- Search Button -->
                <div class="col-md-1">
                    <button type="submit" class="btn w-100 py-2" style="background-color: #FFD700;">
                        <i class="fas fa-search text-white"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- MAIN CONTENT -->
        <div class="row">
            <!-- LEFT: FILTER -->
            <div class="col-md-3">
                <div class="card p-3">
                    <h6 class="fw-bold border-start border-3 border-danger ps-2 mb-3">Filter by Price</h6>

                    <input type="range" id="priceRange" name="price" class="form-range" min="10" max="700" step="10" value="700" />
                    <p class="text-muted mt-2 mb-3" id="priceRangeDisplay">Price: $10 – $700</p>
                    <button class="btn btn-danger w-100 fw-bold">Filter</button>
                </div>
            </div>

            <!-- RIGHT: PRODUCTS -->
            <div class="col-md-9">
                <div class="row g-4">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="card border-0 shadow-sm">
                                <img src="~/images/product/1-400x465.png" class="card-img-top" alt="Product Image" style="height: 250px; object-fit: cover;">
                                <div class="card-body p-2">
                                    <a href="#" class="fs-6 fw-bold text-dark d-block">Flowline Dresses</a>
                                    <span class="text-muted small d-block">Women</span>
                                    <span class="fw-semibold text-danger d-block mb-2">200.000đ</span>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-outline-dark btn-sm">M</button>
                                        <button class="btn btn-outline-dark btn-sm">L</button>
                                        <button class="btn btn-outline-dark btn-sm">XL</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

